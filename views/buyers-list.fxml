<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="700.0" minWidth="880.0" stylesheets="@../resources/styles/app.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RentedCarListController">
    <children>
        <HBox spacing="5.0">
            <children>
                <ToggleButton fx:id="multipleButton" mnemonicParsing="false" text="Select Multiple">
                    <styleClass>
                        <String fx:value="button" />
                        <String fx:value="btn-dark" />
                    </styleClass>
                    <HBox.margin>
                        <Insets bottom="-5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </ToggleButton>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" styleClass="btn-green" text="Find">
                    <HBox.margin>
                        <Insets bottom="-5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button fx:id="showAllButton" mnemonicParsing="false" style="-fx-background-color: #027399;" text="Show all">
                    <HBox.margin>
                        <Insets bottom="-5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
            </children>
            <padding>
                <Insets bottom="15.0" />
            </padding>
        </HBox>
        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Car" />
                <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Person Id" />
                <TableColumn fx:id="qtyColumn" prefWidth="75.0" text="Start Date" />
                <TableColumn fx:id="endDateColumn" prefWidth="75.0" text="End Date" />
                <TableColumn fx:id="totalPriceColumn" prefWidth="75.0" text="Total Price" />
                <TableColumn fx:id="paymentMethodColumn" prefWidth="75.0" text="Payment Method" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu >
                    <items>
                        <MenuItem fx:id="viewMenuItem" mnemonicParsing="false"  text="View" />
                        <MenuItem fx:id="editMenuItem" mnemonicParsing="false"  text="Edit" />
                        <MenuItem fx:id="removeMenuItem" mnemonicParsing="false"  text="Remove" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <HBox fx:id="paginationPane" alignment="CENTER" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #99bbc7;" styleClass="pagination-list">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="&lt;">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="1">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="2">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="3">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="4">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Label text="..." />
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="14">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
                <Button blendMode="MULTIPLY" mnemonicParsing="false" text="&gt;">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Button>
            </children>
        </HBox>
    </children>
</VBox>