<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@../resources/styles/app.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BuyersDetailsController">
    <children>
        <HBox alignment="TOP_CENTER" style="-fx-background-color: #1d5c73;" VBox.vgrow="SOMETIMES">
            <children>
                <GridPane hgap="15.0" style="-fx-background-color: #99bbc7;" styleClass="form-wrapper" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Handler">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Name" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Email" GridPane.rowIndex="2">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Password" GridPane.rowIndex="3">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Confirm Password" GridPane.rowIndex="4">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Role" GridPane.rowIndex="5">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Is Active" GridPane.rowIndex="6">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Date Created" GridPane.rowIndex="7">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <Label text="Date Updated" GridPane.rowIndex="8">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Label>
                        <TextField fx:id="idField" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                        <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                        <ChoiceBox fx:id="roleCbo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
                        <CheckBox fx:id="activeChb" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Button mnemonicParsing="false" onAction="#onCancelClick" styleClass="btn-dark" text="Cancel" GridPane.columnIndex="3" GridPane.rowIndex="8">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Button>
                        <Button mnemonicParsing="false" onAction="#onSaveClick" styleClass="btn-dark" text="Save" GridPane.columnIndex="3" GridPane.rowIndex="7">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font></Button>
                        <DatePicker GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />
                        <DatePicker GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="8" />
                    </children>
                    <HBox.margin>
                        <Insets right="40.0" />
                    </HBox.margin>
                </GridPane>
            </children>
        </HBox>
    </children>
</VBox>
