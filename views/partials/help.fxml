<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="350.0" spacing="15.0" stylesheets="@../../resources/styles/app.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pwm.controllers.partials.AboutController">
    <children>
        <StackPane style="-fx-background-color: #99bbc7;" styleClass="about-card-img">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/images/circle-cropped.png" />
                    </image>
                </ImageView>
            </children>
        </StackPane>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="appNameLabel" alignment="TOP_LEFT" prefHeight="36.0" prefWidth="175.0" text="Booking of rental cars" textFill="#027399">
                    <font>
                        <Font name="Arial Black" size="13.0" />
                    </font></Label>
                <Label fx:id="versionLabel" text="Visit our website:" textFill="#027399">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font></Label>
                <Button mnemonicParsing="false" style="-fx-background-color: #99bbc7;" text="Go" />
            </children>
        </VBox>
    </children>
</HBox>
